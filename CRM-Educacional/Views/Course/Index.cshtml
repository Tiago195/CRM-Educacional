@model List<CourseModel>

<section>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Duração</th>
      </tr>
    </thead>
    <tbody>
      @for (int i = 0; i < Model.Count; i++)
      {
        var index = i + 1;
        <tr>
          <td>@index</td>
          <td>@Model[i].Name</td>
          <td>@Model[i].Duration</td>
        </tr>
      }
    </tbody>
  </table>
</section>